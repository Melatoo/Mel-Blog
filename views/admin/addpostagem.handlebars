{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Novo Post: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post">
            <label for="nome">Titulo: </label>
                <input type="text" name="titulo" id="titulo" placeholder="Titulo do post" class="form-control">
            <label class="mt-3" for="slug">Slug: </label>
                <input type="text" name="slug" id="slug" placeholder="Slug do post" class="form-control">
            <label class="mt-3" for="descricao">Descrição: </label>
                <input type="text" name="descricao" id="descricao" placeholder="Descricao do post" class="form-control">
            <textarea name="conteudo" id="conteudo" class="form-control mt-3" placeholder="Conteudo do post"></textarea>
            <label for="categoria" class="label-select mt-3">Categoria: </label>
                <select name="categoria" id="categoria">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria encontrada!</option>
                    {{/each}}
                </select>
                <br>
            <button type="submit" class="btn btn-success mt-4">Postar</button>
        </form>            
        <a href="/admin/postagens"><button class="btn btn-secondary mt-2">Voltar</button></a>
    </div>
</div>