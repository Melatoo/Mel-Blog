    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Nova categoria: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="post">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control">
            <label class="mt-3" for="slug">Slug: </label>
                <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control">
            <button type="submit" class="btn btn-success mt-4">Criar categoria</button>
        </form>            
        <a href="/admin/categorias"><button class="btn btn-secondary mt-2">Voltar</button></a>
    </div>
</div>