{{#each erros}}
    <div class="alert alert-danger" role="alert">
        {{texto}}
    </div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <form action="" method="post">
            <label for="nome">Nome: </label> 
                <input type="text" name="nome" id="nome" class="form-control" placeholder="Digite seu nome">
            <label for="email" class="mt-3">E-mail: </label>
                <input type="text" name="email" id="email" class="form-control" placeholder="Digite sua senha">
            <label for="senha" class="mt-3">Senha: </label>
                <input type="password" name="senha" id="senha" class="form-control" placeholder="Digite sua senha">
            <label for="senha2" class="mt-3">Confirme sua senha: </label>
                <input type="password" name="senha2" id="senha2" class="form-control" placeholder="Digite sua senha novamente">
            <input type="submit" value="Cadastrar" class="btn btn-success mt-4">
        </form>
    </div>
</div>